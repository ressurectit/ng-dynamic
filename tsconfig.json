{
    "compilerOptions":
    {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "useDefineForClassFields": false,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "rootDir": ".",
        "outDir": "es2022",
        "paths":
        {
            "@anglr/dynamic/layout": ["./layout/src/index.ts"],
            "@anglr/dynamic/layout-editor": ["./layout-editor/src/index.ts"],
            "@anglr/dynamic/layout-relations": ["./layout-relations/src/index.ts"],
            "@anglr/dynamic/form": ["./form/src/index.ts"],
            "@anglr/dynamic/relations": ["./relations/src/index.ts"],
            "@anglr/dynamic/relations-editor": ["./relations-editor/src/index.ts"],
            "@anglr/dynamic/relations-debugger": ["./relations-debugger/src/index.ts"],
            "@anglr/dynamic/basic-components": ["./basic-components/src/index.ts"],
            "@anglr/dynamic/material-components": ["./material-components/src/index.ts"],
            "@anglr/dynamic/css-components": ["./css-components/src/index.ts"],
            "@anglr/dynamic/handlebars-components": ["./handlebars-components/src/index.ts"],
            "@anglr/dynamic/rest-components": ["./rest-components/src/index.ts"],
            "@anglr/dynamic/tinymce-components": ["./tinymce-components/src/index.ts"],
            "@anglr/dynamic/math-components": ["./math-components/src/index.ts"],
            "@anglr/dynamic/grid-components": ["./grid-components/src/index.ts"],
            "@anglr/dynamic": ["./src/index.ts"],
        },
        "lib":
        [
            "ES2022",
            "dom"
        ],
        "plugins":
        [
            {
                "name": "@angular/language-service"
            }
        ]
    },
    "exclude":
    [
        "node_modules",
        "demo",
        "schematics"
    ],
    "angularCompilerOptions":
    {
        "compilationMode": "partial",
        "enableResourceInlining": true,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true,
        "strictStandalone": true,
        "typeCheckHostBindings": false,
        "extendedDiagnostics":
        {
            "checks":
            {
                "interpolatedSignalNotInvoked": "error",
                "unusedStandaloneImports": "error",
                "uninvokedFunctionInEventBinding": "error",
                "missingControlFlowDirective": "error"
            }
        }
    }
}